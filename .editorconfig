root = true

[*.ts]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
spaces_around_brackets = inside
trim_trailing_whitespace = true
quote_type = single
end_of_line = lf

[*.{css,scss,html}]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.md]
insert_final_newline = false
trim_trailing_whitespace = true